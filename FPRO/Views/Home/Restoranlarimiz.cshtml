@using FPRO.Models.Class
@model List<Restoranlar>
@{
    ViewBag.Title = "Restoranlarimiz";
    Layout = "~/Views/Shared/_HomeLayoutPage1.cshtml";
}
<section id="team" data-stellar-background-ratio="0.5" style="background-color:#8d99ae;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="section-title wow fadeInUp" data-wow-delay="0.1s" style="padding-top:0px; padding-bottom:0px;">
                    <h1>Restoranlar</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<br>
<div class="container">
    <div class="row">
        @if (Model != null)
        {
            foreach (var r in Model)
            {
                <div class="card" style="width: 200px;height:300px;">
                    <img src="@r.Resim" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text">@r.Aciklama</p>
                        <a href="Contact" class="btn ">İletişime Geçin</a>
                    </div>
                </div>
            }
        }
        <div class="card" style="width: 18rem;">
            <img src="~/Content/images/restoran.jpg" class="card-img-top" alt="..." style="width: 200px; height: 300px; object-fit: cover; ">
            <div class="card-body">
                <p class="card-text">Henüz bir restoran eklenmemiş</p>
                

            </div>
        </div>
    </div>
</div>
