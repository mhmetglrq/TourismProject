@using FPRO.Models.Class
@model List<Oteller>
@{
    ViewBag.Title = "Otellerimiz";
    Layout = "~/Views/Shared/_HomeLayoutPage1.cshtml";
}
<section id="team" data-stellar-background-ratio="0.5" style="background-color:#8d99ae;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="section-title wow fadeInUp" data-wow-delay="0.1s" style="padding-top:0px; padding-bottom:0px;">
                    <h1>Oteller</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<br>
<div class="container">
    <div class="row">

        @foreach (var r in Model)
        {
            <div class="card" style="
                background-color: rgba(255, 255, 255, 0.25);
                backdrop-filter: blur(10px);
                border-radius: 16px;

                text-align: center;
                padding: 20px;
                width: 400px;
                height: 400px;
                background-image: url('@r.Resim' );
                aspect-ratio:auto;
                object-fit: cover;
                justify-items:center;
                background-repeat:no-repeat;
                background-position-x:center;
                background-position-y:center;">

                <h3 class="section-title wow fadeInDown " style="padding-top:25px; padding-bottom:10px;  font-size:large; color:aliceblue">Ad: @r.Baslik</h3>
                <h3 class="section-title wow fadeInDown" style="font-size: large; padding-bottom: 10px; color: aliceblue">Açıklama: @r.Aciklama</h3>
                <h3 class="section-title wow fadeInDown" style="font-size: large; padding-bottom: 10px; color: aliceblue">Bilgi: @r.Bilgi</h3>
                <h3 class="section-title wow fadeInDown" style="font-size: large; padding-bottom: 10px; color: aliceblue">Fiyat: @r.Fiyat₺</h3>
            </div>
            <br>

        }
    </div>
</div>
