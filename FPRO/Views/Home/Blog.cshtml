@using FPRO.Models.Class
@model List<Blog>

@{
    ViewBag.Title = "Gezilecek Yerler";
    Layout = "~/Views/Shared/_HomeLayoutPage1.cshtml";
}

<section id="team" data-stellar-background-ratio="0.5" style="background-color:#8d99ae;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="section-title wow fadeInUp" data-wow-delay="0.1s" style="padding-top:0px; padding-bottom:0px;" >
                    <h1>Gezilecek Yerler</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<br>
<div class="container">

    <div class="row">
        @foreach (var r in Model)
        {
            <div class="col-md-4 col-sm-4">
                <div class="team-thumb wow fadeInUp" data-wow-delay="0.2s">
                    <img src="@r.Resim" class="img-responsive" alt="">
                    <div class="team-hover">
                        <div class="team-item">
                            <h4>@r.Baslik</h4>
                            <ul class="social-icon">
                                <li><a href="#" class="fa fa-linkedin-square"></a></li>
                                <li><a href="#" class="fa fa-envelope-o"></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="team-info">
                    <h3>@r.Baslik</h3>
                    <p>@r.Aciklama</p>
                </div>
            </div>
        }
    </div>
</div>
